<Page 
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           mc:Ignorable="d"
           d:DesignWidth="640" d:DesignHeight="480"
           Title="HomePage Page">
    <StackPanel Name="pnlContent">
        <TextBlock Height="23" Name="txtHello" Text="Hello, world!" Margin="5"/>
        <Button Content="Click Me!" Height="23" Name="cmdClickMe" Margin="5" />
        <Button Content="Circles" Margin="5"></Button>
        <Button Content="Rectangles" Margin="5"></Button>
        <Button Content="Web Services" Margin="5"></Button>
        <StackPanel.Background>
            <RadialGradientBrush>
                <GradientStop Color="#FF9985C3" Offset="0" />
                <GradientStop Color="White" Offset="1" />
            </RadialGradientBrush>
        </StackPanel.Background>
    </StackPanel>

</Page>
