<navigation:Page x:Class="HelloSilverlight.HomePage" 
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           mc:Ignorable="d"
           xmlns:navigation="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Navigation"
           d:DesignWidth="640" d:DesignHeight="480"
           Title="HomePage Page">
    <StackPanel Name="pnlContent">
        <TextBlock Height="23" Name="txtHello" Text="Hello, world!" Margin="5"/>
        <Button Content="Click Me!" Height="23" Name="cmdClickMe" Margin="5" Click="cmdClickMe_Click" />
        <HyperlinkButton Content="Circles" NavigateUri="/CirclesPage.xaml" Margin="5"></HyperlinkButton>
        <HyperlinkButton Content="Rectangles" NavigateUri="/RectanglesPage.xaml" Margin="5"></HyperlinkButton>
        <HyperlinkButton Content="Web Services" NavigateUri="/WebServicesPage.xaml" Margin="5"></HyperlinkButton>
        <StackPanel.Background>
            <RadialGradientBrush>
                <GradientStop Color="#FF9985C3" Offset="0" />
                <GradientStop Color="White" Offset="1" />
            </RadialGradientBrush>
        </StackPanel.Background>
    </StackPanel>

</navigation:Page>
