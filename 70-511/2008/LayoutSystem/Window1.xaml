<Window x:Class="LayoutSystem.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="176" Width="300">
    <Grid Name="grdContents" Background="LightSteelBlue">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="250" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<TextBlock Margin="5" Name="txtHello">Hello World!</TextBlock>
		<Button Grid.Row="1" Height="25" Width="125" Name="btnShowBounds" Click="btnShowBounds_Click">Show Bounding Box</Button>
		<TextBlock Grid.Row="2" Grid.Column="1" Name="txtOutput" />
	</Grid>
</Window>
