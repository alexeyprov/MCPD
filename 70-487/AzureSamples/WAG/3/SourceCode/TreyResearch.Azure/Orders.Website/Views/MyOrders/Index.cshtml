@model IEnumerable<Orders.Website.Models.Order>

@{
    ViewBag.Title = "My Orders";
}

<h2>My Orders</h2>

<table>
    <tr>
        <th>Order Id</th>
        <th>Order Date</th>
        <th>Order Status</th>
        <th>TrackingId</th>
    </tr>
    @foreach (var order in Model)
    {
    <tr>
        <td>@order.OrderId</td>
        <td>@order.OrderDate</td>
        @if (order.Status != null)
        {
        <td>@order.Status.Status</td>
        }
        <td>@order.TrackingId</td>
    </tr>   
    } 
</table>
