<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Website.css")" rel="stylesheet" 
        type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" 
        type="text/javascript"></script>
</head>
<body>
    <div id="header">        
        <h1><a href="/">TREY RESEARCH</a></h1>
        <ul id="navlist">
            <li><a href="@Url.Content("~")" id="current">Home</a></li>
            <li>@Html.ActionLink("Store", "Index", "Store")</li>
            <li>@{Html.RenderAction("CartSummary", "ShoppingCart");}</li>
           
            @if (User.Identity.IsAuthenticated)
            {
                <li>@Html.ActionLink("My Orders", "Index", "MyOrders")</li>   
                <li>@Html.ActionLink("Log Out", "LogOff", "Account")</li>
            }
            else
            {
                <li>@Html.ActionLink("Log On", "LogOn", "Account")</li>
            }
        </ul>        
    </div>

    <div id="main">
        @RenderBody()
    </div>

    <div id="footer">
        <p style="font-size:xx-small">
        @Orders.Website.MvcApplication.Instance
        </p>
    </div>
    </body>
</html>

