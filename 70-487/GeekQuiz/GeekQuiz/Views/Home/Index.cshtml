@{
    ViewBag.Title = "Play";
}

<div id="bodyContainer" ng-app="GeekQuiz">
    <section id="content">
        <div class="container">
            <div class="row">
                <div class="flip-container text-center col-md-12" ng-controller="QuizController" ng-init="NextQuestion()">
                    <div class="back" ng-class="{flip: IsAnswered, correct: IsCorrectAnswer, incorrect: !IsCorrectAnswer}">
                        <p class="lead">{{Answer()}}</p>
                        <p>
                            <button class="btn btn-info btn-lg next option" ng-click="NextQuestion()" ng-disabled="IsWorking">
                                Next Question
                            </button>
                        </p>
                    </div>
                    <div class="front" ng-class="{flip: IsAnswered}">
                        <p class="lead">{{Title}}</p>
                        <div class="row text-center">
                            <button class="btn btn-info btn-lg option" ng-repeat="option in Options" ng-click="SendAnswer(option)" ng-disabled="IsWorking">
                                {{option.title}}
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section scripts {
    @Scripts.Render("~/Scripts/angular.js")
    @Scripts.Render("~/Scripts/app/ITriviaOption.js")
    @Scripts.Render("~/Scripts/app/IQuestionScope.js")
    @Scripts.Render("~/Scripts/app/QuizController.js")
    @Scripts.Render("~/Scripts/app/QuizModule.js")
}